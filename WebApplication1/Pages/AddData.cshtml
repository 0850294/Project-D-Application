@page
@model AddDataModel
@{
    ViewData["Title"] = "Add Data";
}
<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="DataForm" style="margin-top: 30px; margin-bottom: 30px;">
            <div class="AddDataForm" method="post" asp-controller="AddBlock" asp-action="AddData">
                <div class="form-group">
                    <label asp-for="Naam" class="Naam">Naam:</label>
                    <input asp-for="Naam" class="form-control" maxlength="256" />
                    <span asp-validation-for="Naam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BSN" class="BSN">BSN:</label>
                    <input asp-for="BSN" class="form-control" maxlength="16" />
                    <span asp-validation-for="BSN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Antecedent" class="Antecedent">Antecedent:</label>
                    <input asp-for="Antecedent" class="form-control" maxlength="1024" />
                    <span asp-validation-for="Antecedent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Aanhoudingen" class="Aanhoudingen">Aanhoudingen:</label>
                    <input asp-for="Aanhoudingen" class="form-control" maxlength="256" />
                    <span asp-validation-for="Aanhoudingen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Straf" class="Straf">Straf:</label>
                    <input asp-for="Straf" class="form-control" maxlength="256" />
                    <span asp-validation-for="Straf" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Uitkering" class="Uitkering">Heeft Uitkering:</label>
                <select asp-for="Uitkering" class="form-control">
                <option value="UitJa">Ja</option>
                <option value="UitNee">Nee</option>
                </select>
                    <span asp-validation-for="Uitkering"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Traject" class="Traject">Loopt Traject:</label>
                <select asp-for="Traject" class="form-control">
                <option value="TraJa">Ja</option>
                <option value="TraNee">Nee</option>
                </select>
                    <span asp-validation-for="Traject"></span>
                </div>
                <div>
                    <input type="submit" value="Akkoord" class="btn btn-primary" />
                </div>
            </div>      
        </div>    
    </div>
</div>